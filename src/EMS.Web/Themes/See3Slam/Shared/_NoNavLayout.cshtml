@using Microsoft.AspNetCore.Identity
@using EMS.Domain.Models
@inject IOptions<AppSettings> AppSettings
@inject SignInManager<User> SignInManager
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title>@AppSettings.Value.SiteName - @ViewBag.Title</title>
    <link rel="stylesheet" href="https://webfonts.creativecloud.com/c/afd039/1w;arvo,1,WXD:W:n7;open-sans,1,VvF:W:n3/l" media="all">
    <link rel="shortcut icon" href="~/img/See3Slam/favicon.ico" />
    <environment names="See3SlamDev">
        <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/See3Slam/site.css" />
    </environment>
    <environment names="See3SlamProd">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css"
              asp-fallback-href="~/lib/bootstrap/css/bootstrap.min.css"
              asp-fallback-test-class="hidden" asp-fallback-test-property="visibility" asp-fallback-test-value="hidden" />
        <link rel="stylesheet" href="~/css/See3Slam/site.css" asp-append-version="true" />
    </environment>
</head>
<body>
    <div class="mainContent">
        <!-- Header -->
        <div class="header"></div>
        <!-- Nav -->
        <div class="navbar navbar-default" role="navigation">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        @*@if (SignInManager.IsSignedIn(User))
                            {
                                @await Html.PartialAsync("_Navigation")
                            }
                            @await Html.PartialAsync("_LoginPartial")*@
                    </ul>
                </div>
            </div>
        </div>
        <div class="container body-content">
            @RenderBody()
            <hr />
            <footer>
                <div class="sponsorsArea">
                    <h2>Sponsors</h2>
                    <hr />
                    <div class="sponsors">
                        <p align="center" class="med-logos">
                            <img src="~/img/See3Slam/sunrise-rotary.png" alt="Sunrise Rotary" />
                            <img src="~/img/see3slam/WestCoast-See3Slam.png" alt="West Coast Auto Dealers" />
                            <img src="~/img/See3Slam/city-of-richland.png" alt="City of Richland" />
                        </p>
                        <p align="center" class="med-logos">
                            <img src="~/img/See3Slam/coca-cola.png" alt="Coca-Cola" />
                            <img src="~/img/See3Slam/kadlec.png" />
                            <img src="~/img/See3Slam/tire-factory.png" />
                            <img src="~/img/see3slam/total-care-clinics.png" alt="Total Care Clinics" />
                        </p>
                        <p align="center" class="med-logos">
                            <img src="~/img/See3Slam/permobil.png" alt="permobil" />
                            <img src="~/img/See3Slam/kvew-tv.png" alt="KVEW 42" />
                            <img src="~/img/See3Slam/dutch-bros-coffee-cup.png" alt="Dutch Bros Coffee" />
                            <img src="~/img/See3Slam/abadan.png" />
                        </p>
                        <p align="center" class="med-logos">
                            <img src="~/img/See3Slam/windermere-small.png" />
                            <img src="~/img/See3Slam/peak-mortgage-small.png" />
                            <img src="~/img/See3Slam/fast-signs.png" alt="Fast Signs" />
                            <img src="~/img/See3Slam/jimmy-johns-small.png" />
                            <img src="~/img/See3Slam/dan-burns-3d-productions-small.png" />
                        </p>
                    </div>
                    <div>
                        <a href="http://www.intelltect.com" target="_blank"><img src="~/img/IntelliTect.png" alt="IntelliTect" /></a>&copy; @DateTime.Now.Year
                    </div>
                </div>
            </footer>
        </div>
    </div>
    <environment names="See3SlamDev">
        <script src="~/lib/jquery/jquery.js"></script>
        <script src="~/lib/bootstrap/js/bootstrap.js"></script>
        @*<script src="~/js/app.js" asp-append-version="true"></script>*@
    </environment>
    <environment names="See3SlamProd">
        <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-2.2.1.min.js"
                asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
                asp-fallback-test="window.jQuery">
        </script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"
                asp-fallback-src="~/lib/bootstrap/dist/js/bootstrap.min.js"
                asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal">
        </script>
        @*<script src="~/js/app.js" asp-append-version="true"></script>*@
    </environment>

    @RenderSection("scripts", required: false)
</body>
</html>
