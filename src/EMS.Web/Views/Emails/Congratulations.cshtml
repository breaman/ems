@inject IOptions<AppSettings> AppSettings
@model CongratulationsViewModel
<!DOCTYPE html>
<html lang="en">
<head>
    <title>Confirmation E-Mail</title>
    <meta http-equiv="content-type" content="text/html;charset=UTF-8" />
</head>
<body>
    <p>
        @Model.FirstName,
    </p>
    <p>
        Congratulations, you've now successfully registered for the site. Please go and create a team now:<br />
        <strong>
            <a href="@Model.CreateTeamUrl" style="margin:20px;display:block;color:#ffffff;font-family:'helvetica neue',helvetica,arial,sans-serif;font-size:18px;font-weight:600;padding:18px 0;line-height:1em;text-decoration:none;text-align:center;background-color:#FFB81D;border-radius:3px" target="_blank">
                Create Team
            </a>
            <small>
                Trouble with the button above? Copy and paste the link below into your browser:<br />
                @Model.CreateTeamUrl
            </small>
        </strong>
    </p>
    <p style="clear: both; padding-top: 10px;">
        &copy; Copyright @DateTime.Now.Year @AppSettings.Value.SiteName. All rights reserved.
    </p>
</body>
</html>